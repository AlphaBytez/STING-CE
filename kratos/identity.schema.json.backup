{
  "$id": "https://schemas.ory.sh/presets/kratos/quickstart/email-password/identity.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Person",
  "type": "object",
  "properties": {
    "traits": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "title": "E-Mail",
          "minLength": 3,
          "ory.sh/kratos": {
            "credentials": {
              "password": {
                "identifier": true
              },
              "webauthn": {
                "identifier": true
              },
              "passkey": {
                "display_name": true
              },
              "code": {
                "identifier": true,
                "via": "email"
              }
            },
            "verification": {
              "via": "email"
            },
            "recovery": {
              "via": "email"
            }
          }
        },
        "name": {
          "type": "object",
          "properties": {
            "first": {
              "type": "string",
              "title": "First Name",
              "minLength": 1
            },
            "last": {
              "type": "string",
              "title": "Last Name",
              "minLength": 1
            }
          },
          "required": ["first", "last"]
        },
        "role": {
          "type": "string",
          "title": "Role",
          "default": "user",
          "enum": ["user", "admin", "moderator", "support"],
          "ory.sh/kratos": {
            "credentials": {
              "password": {
                "identifier": false
              }
            }
          }
        },
        "force_password_change": {
          "type": "boolean",
          "title": "Force Password Change",
          "default": false
        }
      },
      "required": [
        "email",
        "name"
      ],
      "additionalProperties": false
    }
  }
}
