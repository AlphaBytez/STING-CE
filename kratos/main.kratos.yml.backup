version: "v0.8.2-alpha.1"

dsn: postgresql://postgres:postgres@db:5432/sting_app?sslmode=disable

log:
  level: debug

serve:
  public:
    base_url: https://localhost:4433
    tls:
      cert:
        path: /etc/certs/server.crt
      key:
        path: /etc/certs/server.key
    cors:
      enabled: true
      allowed_origins:
        - http://localhost:3000
        - https://localhost:3000
      allowed_methods:
        - GET
        - POST
        - PUT
        - PATCH
        - DELETE
        - OPTIONS
      allowed_headers:
        - "*"
      allow_credentials: true
  admin:
    base_url: https://localhost:4434
    tls:
      cert:
        path: /etc/certs/server.crt
      key:
        path: /etc/certs/server.key

identity:
  default_schema_id: default
  schemas:
    - id: default
      url: file:///etc/config/kratos/identity.schema.json

selfservice:
  default_browser_return_url: https://localhost:3000/dashboard
  allowed_return_urls:
    - https://localhost:3000
    - https://localhost:3000/dashboard
    - https://localhost:3000/login
    - https://localhost:3000/register
    - https://localhost:3000/setup-passkey
    - https://localhost:3000/verification
  flows:
    registration:
      ui_url: https://localhost:3000/register
      lifespan: 1h
      enabled: true
      after:
        password:
          hooks:
            - hook: session
        passkey:
          hooks:
            - hook: session
        webauthn:
          hooks:
            - hook: session
        code:
          hooks:
            - hook: session
    verification:
      enabled: true
      ui_url: https://localhost:3000/verification
      lifespan: 1h
      after:
        default_browser_return_url: https://localhost:3000/dashboard
    login:
      ui_url: https://localhost:3000/login
      lifespan: 1h
      after:
        default_browser_return_url: https://localhost:3000/dashboard
    error:
      ui_url: https://localhost:3000/error

    # Settings flow for updating user details like passkeys
    settings:
      ui_url: https://localhost:3000/settings
      privileged_session_max_age: 15m
      lifespan: 1h

  methods:
    password:
      enabled: true
      config:
        haveibeenpwned_enabled: false
        identifier_similarity_check_enabled: false
        min_password_length: 8
    passkey:
      enabled: true
      config:
        rp:
          id: localhost
          display_name: STING Authentication
    code:
      enabled: true
      config:
        lifespan: 15m
    webauthn:
      enabled: true
      config:
        rp:
          id: localhost
          display_name: STING Authentication
          origins:
            - https://localhost:3000
            - https://localhost:4433
            - http://localhost:3000
        passwordless: false
    link:
      enabled: true
      config:
        lifespan: 15m

secrets:
  cookie:
    - 33078e5134e3f19ae0172307b414b766
  cipher:
    - 2d7df66210d1cb702f465220b40e4cd9

session:
  cookie:
    domain: localhost
  lifespan: 24h

courier:
  smtp:
    connection_uri: smtp://mailpit:1025
  template_override_path: /etc/config/kratos/courier-templates/