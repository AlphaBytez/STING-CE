FROM node:18.20.6-alpine

WORKDIR /app

# Copy package files first for better caching
COPY package*.json ./

# Install dependencies with cache mount
# Note: We need all dependencies (including dev) to build the React app
RUN --mount=type=cache,target=/root/.npm \
    npm ci --no-audit --no-fund

# Copy the rest of the frontend code
COPY . .

# Copy and setup env.js generation script
COPY update-env.sh /app/update-env.sh

# Fix permissions for the script explicitly
RUN chmod 755 /app/update-env.sh && \
    chmod +x /app/start-react.sh

EXPOSE 8443

# Run env.js generation before starting dev server
CMD ["/bin/sh", "-c", "sh /app/update-env.sh && ls -la /app/certs && /app/start-react.sh"]
